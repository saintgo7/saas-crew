// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================
// Authentication & User Management
// ============================================

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  emailVerified DateTime?
  password      String?   // Null for OAuth users
  name          String
  avatar        String?
  bio           String?
  department    String?
  grade         Int?      // 학년

  // Level system
  level         Int       @default(1)
  xp            Int       @default(0)
  rank          UserRank  @default(JUNIOR)

  // OAuth
  githubId      String?   @unique
  googleId      String?   @unique

  // Preferences
  theme         String    @default("light")
  language      String    @default("ko")

  // Relations
  accounts      Account[]
  sessions      Session[]
  enrollments   Enrollment[]
  projects      ProjectMember[]
  posts         Post[]
  comments      Comment[]
  votes         Vote[]

  // Chat relations
  channelMembers ChannelMember[]
  messages       Message[]

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Performance Indexes:
  // - email: unique constraint already indexed
  // - githubId, googleId: unique constraints already indexed
  // - [rank, xp]: optimized for leaderboard queries
  // - createdAt: useful for recent user lists
  @@index([email])
  @@index([githubId])
  @@index([rank, xp])
  @@index([createdAt(sort: Desc)])
  @@map("users")
}

enum UserRank {
  JUNIOR
  SENIOR
  MASTER
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// ============================================
// Learning Management System (LMS)
// ============================================

model Course {
  id            String      @id @default(cuid())
  title         String
  slug          String      @unique
  description   String      @db.Text
  thumbnail     String?
  level         CourseLevel
  duration      Int         // hours
  published     Boolean     @default(false)
  featured      Boolean     @default(false)

  // Content
  chapters      Chapter[]
  enrollments   Enrollment[]

  // Metadata
  tags          String[]
  category      String?
  topics        String[]    // Course topics/learning objectives
  prerequisites String[]    // Required course IDs
  order         Int         @default(0)  // Sort order within category

  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt

  // Performance Indexes:
  // - slug: unique constraint indexed for detail page lookups
  // - [level, published]: compound index for filtered course listing
  // - [featured desc, createdAt desc]: optimized for default sort order
  // - tags: GIN index for array contains queries
  // - [category, order]: optimized for category-based sorted listing
  @@index([slug])
  @@index([level, published])
  @@index([featured(sort: Desc), createdAt(sort: Desc)])
  @@index([tags], type: Gin)
  @@index([category, order])
  @@map("courses")
}

enum CourseLevel {
  JUNIOR
  SENIOR
  MASTER
}

model Chapter {
  id          String   @id @default(cuid())
  title       String
  slug        String
  order       Int
  content     String   @db.Text
  videoUrl    String?
  duration    Int?     // minutes

  courseId    String
  course      Course   @relation(fields: [courseId], references: [id], onDelete: Cascade)

  assignments Assignment[]
  progresses  Progress[]

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([courseId, slug])
  @@index([courseId, order])
  @@map("chapters")
}

model Enrollment {
  id          String    @id @default(cuid())

  userId      String
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  courseId    String
  course      Course    @relation(fields: [courseId], references: [id], onDelete: Cascade)

  progress    Int       @default(0) // 0-100
  completedAt DateTime?

  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  // Performance Indexes:
  // - [userId, courseId]: unique constraint already indexed
  // - userId: fast lookup of user's enrollments
  // - courseId: fast lookup of course enrollments (student list)
  // - [userId, progress]: optimized for filtering incomplete courses
  @@unique([userId, courseId])
  @@index([userId])
  @@index([courseId])
  @@index([userId, progress])
  @@map("enrollments")
}

model Progress {
  id           String    @id @default(cuid())

  userId       String
  chapterId    String
  chapter      Chapter   @relation(fields: [chapterId], references: [id], onDelete: Cascade)

  completed    Boolean   @default(false)
  lastPosition Int       @default(0) // video position in seconds

  completedAt  DateTime?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  @@unique([userId, chapterId])
  @@index([userId])
  @@index([chapterId])
  @@map("progresses")
}

model Assignment {
  id          String   @id @default(cuid())
  title       String
  description String   @db.Text
  dueDate     DateTime?

  chapterId   String
  chapter     Chapter  @relation(fields: [chapterId], references: [id], onDelete: Cascade)

  submissions Submission[]

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([chapterId])
  @@map("assignments")
}

model Submission {
  id           String   @id @default(cuid())

  userId       String
  assignmentId String
  assignment   Assignment @relation(fields: [assignmentId], references: [id], onDelete: Cascade)

  content      String   @db.Text
  githubUrl    String?

  score        Int?
  feedback     String?  @db.Text

  submittedAt  DateTime @default(now())
  gradedAt     DateTime?

  @@unique([userId, assignmentId])
  @@index([assignmentId])
  @@index([userId])
  @@map("submissions")
}

// ============================================
// Project Management
// ============================================

model Project {
  id          String       @id @default(cuid())
  name        String
  slug        String       @unique
  description String?      @db.Text
  visibility  Visibility   @default(PRIVATE)

  githubRepo  String?
  deployUrl   String?

  members     ProjectMember[]

  // Metadata
  tags        String[]
  coverImage  String?

  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  // Performance Indexes:
  // - slug: unique constraint already indexed
  // - visibility: filter public projects
  // - createdAt: default sorting
  // - tags: GIN index for array contains queries
  // - [visibility, createdAt]: compound index for filtered listing
  @@index([slug])
  @@index([visibility])
  @@index([createdAt(sort: Desc)])
  @@index([tags], type: Gin)
  @@index([visibility, createdAt(sort: Desc)])
  @@map("projects")
}

enum Visibility {
  PUBLIC
  PRIVATE
  TEAM
}

model ProjectMember {
  id        String      @id @default(cuid())

  projectId String
  project   Project     @relation(fields: [projectId], references: [id], onDelete: Cascade)

  userId    String
  user      User        @relation(fields: [userId], references: [id], onDelete: Cascade)

  role      ProjectRole @default(MEMBER)

  joinedAt  DateTime    @default(now())

  @@unique([projectId, userId])
  @@index([userId])
  @@index([projectId])
  @@map("project_members")
}

enum ProjectRole {
  OWNER
  ADMIN
  MEMBER
  VIEWER
}

// ============================================
// Community
// ============================================

model Post {
  id        String    @id @default(cuid())
  title     String
  slug      String    @unique
  content   String    @db.Text
  tags      String[]

  authorId  String
  author    User      @relation(fields: [authorId], references: [id], onDelete: Cascade)

  comments  Comment[]
  votes     Vote[]

  viewCount Int       @default(0)

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  // Performance Indexes:
  // - authorId: fast author post lookups
  // - slug: unique constraint already indexed
  // - createdAt desc: optimized for default sorting (latest posts)
  // - tags: GIN index for array contains queries (hasSome)
  @@index([authorId])
  @@index([slug])
  @@index([createdAt(sort: Desc)])
  @@index([tags], type: Gin)
  @@map("posts")
}

model Comment {
  id        String    @id @default(cuid())
  content   String    @db.Text

  postId    String
  post      Post      @relation(fields: [postId], references: [id], onDelete: Cascade)

  authorId  String
  author    User      @relation(fields: [authorId], references: [id], onDelete: Cascade)

  parentId  String?
  parent    Comment?  @relation("CommentReplies", fields: [parentId], references: [id], onDelete: Cascade)
  replies   Comment[] @relation("CommentReplies")

  accepted  Boolean   @default(false) // Best answer

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@index([postId])
  @@index([authorId])
  @@index([parentId])
  @@map("comments")
}

model Vote {
  id        String   @id @default(cuid())

  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  postId    String
  post      Post     @relation(fields: [postId], references: [id], onDelete: Cascade)

  value     Int      // 1 for upvote, -1 for downvote

  createdAt DateTime @default(now())

  // Performance Indexes:
  // - [userId, postId]: unique constraint for duplicate vote prevention
  // - postId: optimized for vote aggregation queries (groupBy postId)
  @@unique([userId, postId])
  @@index([postId])
  @@map("votes")
}

// ============================================
// Real-time Chat System
// ============================================

model Channel {
  id          String        @id @default(cuid())
  name        String
  slug        String        @unique
  description String?
  type        ChannelType   @default(PUBLIC)
  minRank     UserRank?     // Minimum rank required to join (for LEVEL_RESTRICTED)

  // Channel settings
  isDefault   Boolean       @default(false) // Auto-join for new users
  icon        String?

  // Relations
  members     ChannelMember[]
  messages    Message[]

  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  @@index([slug])
  @@index([type])
  @@index([minRank])
  @@map("channels")
}

enum ChannelType {
  PUBLIC           // Anyone can join
  PRIVATE          // Invite only
  LEVEL_RESTRICTED // Requires minimum rank
  DIRECT           // 1:1 DM
}

model ChannelMember {
  id          String        @id @default(cuid())

  channelId   String
  channel     Channel       @relation(fields: [channelId], references: [id], onDelete: Cascade)

  userId      String
  user        User          @relation(fields: [userId], references: [id], onDelete: Cascade)

  role        ChannelRole   @default(MEMBER)

  // Notification settings
  muted       Boolean       @default(false)
  lastReadAt  DateTime      @default(now())

  joinedAt    DateTime      @default(now())

  @@unique([channelId, userId])
  @@index([userId])
  @@index([channelId])
  @@map("channel_members")
}

enum ChannelRole {
  OWNER
  ADMIN
  MEMBER
}

model Message {
  id          String        @id @default(cuid())
  content     String        @db.Text
  type        MessageType   @default(TEXT)

  channelId   String
  channel     Channel       @relation(fields: [channelId], references: [id], onDelete: Cascade)

  authorId    String
  author      User          @relation(fields: [authorId], references: [id], onDelete: Cascade)

  // Thread support (Twitter-style replies)
  parentId    String?
  parent      Message?      @relation("MessageThread", fields: [parentId], references: [id], onDelete: SetNull)
  replies     Message[]     @relation("MessageThread")

  // Q&A features
  isQuestion  Boolean       @default(false)
  isAnswered  Boolean       @default(false)
  isPinned    Boolean       @default(false)

  // Attachments
  attachments Attachment[]

  // Reactions count (denormalized for performance)
  reactionCount Int         @default(0)

  // Edit history
  editedAt    DateTime?
  isDeleted   Boolean       @default(false)

  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  @@index([channelId, createdAt(sort: Desc)])
  @@index([authorId])
  @@index([parentId])
  @@index([isQuestion, isAnswered])
  @@map("messages")
}

enum MessageType {
  TEXT        // Plain text message
  CODE        // Code snippet with syntax highlighting
  FILE        // File attachment
  QUESTION    // Q&A question
  SYSTEM      // System message (join, leave, etc.)
}

model Attachment {
  id          String   @id @default(cuid())
  filename    String
  originalName String
  url         String
  mimeType    String
  size        Int      // bytes

  messageId   String
  message     Message  @relation(fields: [messageId], references: [id], onDelete: Cascade)

  createdAt   DateTime @default(now())

  @@index([messageId])
  @@map("attachments")
}

model MessageReaction {
  id          String   @id @default(cuid())
  emoji       String   // e.g., "thumbsup", "heart", "check"

  messageId   String
  userId      String

  createdAt   DateTime @default(now())

  @@unique([messageId, userId, emoji])
  @@index([messageId])
  @@map("message_reactions")
}
